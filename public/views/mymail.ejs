<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <div class="col-sm-3 col-sm-offset-5">
        <h1>My Mail</h1>
      </div>
    </div>
    <div class="large-12 medium-12 small-12 columns">
      <div class="col-sm-2">
        <h2>Connections</h2>
        <ul ng-repeat="friend in friends">
          <li class='cursor friends' ng-click='mailUser()' data-toggle="modal" data-target="#myModal">{{friend.fullName}}</li>
        </ul>
      </div>
      <div class="col-sm-10">
        <div class="col-sm-12">
          <div class="col-sm-8 col-sm-offset-1">
            <label for="searchBar">Search</label>
            <input ng-model="searchText" id="searchBar" type="text">
          </div>
        </div>
        <div class="messageBoxWrapper">
          <div ng-repeat="message in messages | filter: searchText | orderBy: 'sent':true">
            <div class="messageBox toProfile color-{{message.read}}" ng-click="showOneMessage()">
              <div class="senderLine">
                <div class="col-sm-3">
                  <p>From: {{message.senderName}}</p>
                </div>
                <div class="col-sm-5">
                  Subject: {{message.subject}}
                </div>
                <div class="col-sm-3 col-sm-offset-1">
                  <p>{{message.sent | date:'MMM d, y'}}</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-body">
        <form class="form-horizontal" role="form" ng-submit="sendMail(message)">
          <fieldset>
            <legend>Send Mail to {{msgdUser}}</legend>
            <div class="form-group">
              <label for="subject" class="col-lg-4 control-label">Subject</label>
              <div class="col-lg-8">
                <input type="text" class="form-control" id="subject" name="subject" ng-model="message.subject">
              </div>
            </div>
            <div class="form-group">
              <label for="message" class="col-lg-4 control-label">Message</label>
              <div class="col-lg-8">
                <textarea class="form-control" id="message" name="message" ng-model="message.message"></textarea>
              </div>
            </div>
            <div class="form-group">
              <div class="col-lg-8 col-lg-offset-4">
                <button type="reset" class="btn btn-default">Cancel</button>
                <button type="submit" class="btn btn-primary">Submit</button>
              </div>
            </div>
          </fieldset>
        </form>
      </div>
    </div>
  </div>
</div>
