  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <form role="form" action="/login" method="post">
          <fieldset>
            <div class="col-lg-10 col-lg-offset-2">
              <legend>Login</legend>
            </div>
            <div class="form-group">
              <label for="username" class="col-lg-2 col-lg-offset-1 control-label">Username</label>
