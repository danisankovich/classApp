<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <div id="banner">
      <img src="http://www.lorempixel.com/800/200" alt="Banner">
    </div>
    <h1>{{institution.name}}</h1>
    <div>
      <button ng-click="leaveInstitution()">Leave Institution</button>
      </span>
      <h2>
    </div>
    <button ng-click="showInstitutionEdit()">Edit</button>
    <!-- <img ng-src="{{institution.picUrl}}" alt=""> -->
    <div ng-repeat="alumni in institutionAlumni">
      <h2 ng-click="showOneUser()" class="toProfile">{{alumni.fullName}}</h2>
    </div>
  </div>
</div>


<div class="row">
  <div class="col-md-4 col-md-offset-1">
    <div id="bio">
      <header class="boxHeader">
        <p>Bio</p>
      </header>
      <hr>
    </div>
  </div>
  <div class="col-md-4 col-md-offset-1">
    <div id="ButtonArea">
      <div class="socialMedia">
        <div class="joinButton">
          <button ng-click="joinInstitutionOpen()" class="btn btn-primary" id="joinButton">Join!</button>

          <form ng-hide="" ng-submit="joinInstitution(user)" role="form">
            <div class="form-group">
              <label for="dateGraduated" class="col-lg-2 col-lg-offset-1 control-label">Graduation Date</label>
              <div class="col-lg-7">
                <input type="date" name="dateGraduated" ng-model="user.institution.dateGraduated" id="dateGraduated" class="form-control" />
              </div>
              <button type="submit" class="btn btn-default">Submit</button>
            </div>
          </form>
        </div>
      </div>

    </div>
  </div>
</div>




<!-- <h1>{{institution.events}}</h1> -->
<button type="button" class="btn btn-skin" id="btnContactUs" data-toggle="modal" data-target="#myModal">
  Add Event
</button>

<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-body">
        <form class="form-horizontal" role="form" action="/events/new/" method="POST">
          <fieldset>
            <legend>Add Event</legend>
            <div class="form-group">
              <label for="name" class="col-lg-4 control-label">Event Name</label>
              <div class="col-lg-8">
                <input type="text" class="form-control" id="name">
              </div>
            </div>
            <div class="form-group">
              <label for="picUrl" class="col-lg-4 control-label">Picture URL</label>
              <div class="col-lg-8">
                <input type="text" class="form-control" id="picUrl" placeholder="">
              </div>
            </div>
            <div class="form-group">
              <label for="price" class="col-lg-4 control-label">Price</label>
              <div class="col-lg-8">
                <input type="number" class="form-control" id="price" placeholder="">
              </div>
            </div>
            <div class="form-group">
              <label for="when" class="col-lg-4 control-label">Date</label>
              <div class="col-lg-8">
                <input type="date" class="form-control" id="when" placeholder="">
              </div>
            </div>
            <div class="form-group">
              <label for="textArea" class="col-lg-4 control-label">Description</label>
              <div class="col-lg-8">
                <textarea class="form-control" rows="3" id="description"></textarea>
              </div>
            </div>
            <div class="form-group">
              <div class="col-lg-8 col-lg-offset-4">
                <button type="reset" data-dismiss="modal" class="btn btn-default">Cancel</button>
                <button type="submit" class="btn btn-primary">Submit</button>
              </div>
            </div>
          </fieldset>
        </form>
            </div>
    </div>
  </div>
</div>
