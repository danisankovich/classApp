<div class="container-fluid">
  <div class="col-md-8 col-md-offset-2 vertPanel">
    <div id="banner">
      <div class="cover">
        <img align="center" src="http://static1.squarespace.com/static/5516fbf5e4b0392be7217137/t/5521c433e4b0d8eff632ea41/1428276298960/Miami_Background_Photo.png?format=2500w" alt="Banner">
      </div>
    </div>
    <div class="row" id="nomenclature">
      <h1>{{institution.name}}</h1>
      <div>
        <button class="hideButton" ng-click="leaveInstitution()">Leave Institution</button>
      </span>
      <h2>
      </div>
      <button ng-click="showInstitutionEdit()">Edit</button>
    </div>

    <div class="joinContainer">
      <div class="row">
        <div class="col-md-4 col-md-offset-1">
          <div id="bio">
            <header class="boxHeader">
              <p>Bio</p>
            </header>
            <hr>
            <p>{{institution.bio}}</p>
          </div>
        </div>
        <div class="col-md-4 col-md-offset-1">
          <div id="ButtonArea">
            <div class="socialMedia">
              <div class="joinButton eventButton">
                <button ng-hide="showJoinForm" ng-click="joinInstitutionOpen()" class="btn btn-primary" id="joinButton">Join!</button>
                <button type="button" class="btn btn-primary" id="addEventButton" data-toggle="modal" data-target="#myModal">Add Event</button>

                <form ng-show="showJoinForm" ng-submit="joinInstitution(user)" role="form">
                  <div class="form-group">
                    <label for="dateGraduated" class="col-lg-2 col-lg-offset-1 control-label">Graduation Date</label>
                    <div class="col-lg-7">
                      <input type="date" name="dateGraduated" ng-model="user.institution.dateGraduated" id="dateGraduated" class="form-control" />
                    </div>
                    <button ng-click="showJoinForm=false" type="submit" class="btn btn-default">Submit</button>
                    <button ng-click="showJoinForm=false" type="button" class="btn btn-danger">cancel</button>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="col-md-12 contentBox">
      <div class="col-md-6">
        <div class="alumniList">
          <h2>Alumni Members</h2>
          <hr>
          <div ng-repeat="alumni in institutionAlumni">
            <h3 ng-click="showOneUser()" class="toProfile">{{alumni.fullName}}</h3>
          </div>
        </div>
      </div>

      <div class="col-md-6">
        <div class="eventList">
          <h2>Events</h2>
          <hr>
          <ul ng-repeat="event in events" class="eventBox">
            <li>{{event.name}}</li>
            <li>${{event.price}} entrance fee</li>
            <li>{{event.when | date:'MMM d, y'}}</li>
          </ul>
        </div>
      </div>
    </div>

    <div class="col-md-12">

      <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-body">
              <form class="form-horizontal" role="form" ng-submit="addEvent(newEvent)">

<!-- FIX FIELD -->


              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
