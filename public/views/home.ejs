<div class="container">
  <div class="row">
      <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="col-sm-8 col-md-8 col-lg-8 col-sm-offset-2 col-md-offset-2 col-lg-offset-2">
          <h1 class="header">ClassDash</h1>
          <h1 class="header">For All Your Alumni Network Needs</h1>
        </div>

    </div>




    <div class="col-lg-12">
      <form role="form" action="/events/new" method="POST">
      <!-- <form role="form" ng-submit="addEvent(newEvent)"> -->
        <fieldset>
          <div class="col-lg-10 col-lg-offset-2">
            <legend>Add Event</legend>
          </div>
          <div class="form-group">
            <label for="name" class="col-lg-2 col-lg-offset-1 control-label">name</label>
            <div class="col-lg-7">
              <input type="text" id="name" name="name" placeholder="Enter name" class="form-control"/>
            </div>
          </div>
          <div class="form-group">
            <label for="picUrl" class="col-lg-2 col-lg-offset-1 control-label">Picture Url</label>
            <div class="col-lg-7">
              <input type="text" id="picUrl" name="picUrl" placeholder="Enter Pic Url" class="form-control"/>
            </div>
          </div>
          <div class="form-group">
            <label for="price" class="col-lg-2 col-lg-offset-1 control-label">Price</label>
            <div class="col-lg-7">
              <input type="number" name="price" placeholder="Enter Price" id="price" class="form-control"/>
            </div>
          </div>
          <div class="form-group">
            <label for="when" class="col-lg-2 col-lg-offset-1 control-label">Date</label>
            <div class="col-lg-7">
              <input type="date" name="when" placeholder="when" id="when" class="form-control"/>
            </div>
          </div>
          <div class="form-group">
            <label for="description" class="col-lg-2 col-lg-offset-1 control-label">description</label>
            <div class="col-lg-7">
              <input type="text" name="description" placeholder="Enter description Name" id="description" class="form-control"/>
            </div>
          </div>
          <div class="form-group">
            <label for="whoCanAttend" class="col-lg-2 col-lg-offset-1 control-label">Who Can Attend</label>
            <div class="col-lg-7">
              <input type="text" name="whoCanAttend" id="whoCanAttend" class="form-control"/>
            </div>
          </div>
          <br>
          <br>
          <div class="col-lg-4 col-lg-offset-8">
            <button type="submit" class="btn btn-default">Submit</button>&nbsp;
            <a ui-sref="/"><button type="button" class="btn btn-primary">Cancel</button></a>
          </div>
        </form>
      </fieldset>
      <hr>
      <div><span>Already Signed Up? </span><a ui-sref="login">Login</a></div>
    </form>
  </div>
  </div>
</div>
