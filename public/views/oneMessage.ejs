<div class="containter">
  <div class="row">
    <div class="col-sm-10 col-sm-offset-1">

      <div class="messageBox">
        <div class="senderLine">
          <div class="col-sm-3">
            <p>From: {{message.senderName}}</p>
          </div>
          <div class="col-sm-3">
            Subject: {{message.subject}}
          </div>
          <div class="col-sm-2 col-sm-offset-4">
            <p>{{message.sent | date:'MMM d, y'}}</p>
          </div>
        </div>
      </div>
      <div class="col-sm-12">
        <div class="oneMsgWrapper">
          <div class="messageLine">
            <div class="col-sm-9">
              <p>{{message.message}}</p>
            </div>
            <div class="col-sm-1 col-sm-offset-2">
              <button type="button" ng-click="replyForm()" class="btn btn-skin" id="btnContactUs" data-toggle="modal" data-target="#myModal">
                reply
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-body">
        <form class="form-horizontal" role="form" ng-submit="replyUser(message)">
          <fieldset>
            <legend>Send Mail to {{user.fullName}}</legend>
            <div class="form-group">
              <label for="subject" class="col-lg-4 control-label">Subject</label>
              <div class="col-lg-8">
                <input type="text" class="form-control" id="subject" name="subject" ng-model="message.subject" disabled>
              </div>
            </div>
            <div class="form-group">
              <label for="message" class="col-lg-4 control-label">Message</label>
              <div class="col-lg-8">
                <textarea class="form-control" id="message" name="message" ng-model="message.message"></textarea>
              </div>
            </div>
            <div class="form-group">
              <div class="col-lg-8 col-lg-offset-4">
                <button type="reset" class="btn btn-default">Cancel</button>
                <button type="submit" class="btn btn-primary">Submit</button>
              </div>
            </div>
          </fieldset>
        </form>
      </div>
    </div>
  </div>
</div>
